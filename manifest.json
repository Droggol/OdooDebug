{
    "name": "Odoo Debug",
    "version": "3.8",
    "manifest_version": 2,
    "description": "Minimal and fast extension to toggle debug mode of Odoo",
    "short_name": "Odoo Debug",
    "browser_action": {
        "default_icon": "off.png",
        "default_title": "- Click for normal debug \n- Double click for debug with assets \n- Triple click for debug with test assets"
    },
    "incognito": "spanning",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["activeTab", "tabs"],
    "icons": {
        "16": "off.png",
        "128": "off.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Period"
            }
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "web_accessible_resources": ["script.js"]
}
